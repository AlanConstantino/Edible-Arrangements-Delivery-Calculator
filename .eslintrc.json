{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "space-before-function-paren": ["error", "never"]
    }
}
